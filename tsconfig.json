{
    "compilerOptions": {
        "target":"ESNEXT",
        "module":"commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": ["esnext"],
        "sourceMap": true,
    },
    "exclude": ["./dist","./node_modules"],
    "include": ["src/**/*"]
}