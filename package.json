{
  "name": "user-management-expressjs-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "serve": "set \"NODE_ENV=production\" && node dist/index.js",
    "start": "set \"NODE_ENV=development\" && ts-node src/index.ts",
    "dev": "set \"DEBUG=server:debug\" && set \"NODE_ENV=development\" && nodemon src/index.ts --exec ts-node",
    "test": "set \"DEBUG=server:debug\" && set \"NODE_ENV=test\" && mocha --require ts-node/register --reporter spec --exit   tests/*.ts --exec ts-node",
    "test:watch": "set \"DEBUG=server:debug\" && set \"NODE_ENV=development\" && mocha  --require ts-node/register --watch --reporter  spec   tests/ --exec ts-node",
    "eslint": "eslint src/**/*.ts --ignore-pattern \"node_modules/\""
  },
  "eslintConfig": {
    "plugins": [
      "node"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended"
    ],
    "rules": {
      "node/no-unsupported-features/es-syntax": 0,
      "node/no-unsupported-features/es-builtins": 0
    },
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2018
    }
  },
  "babel": {
    "presets": [
      "node8"
    ]
  },
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "express": "^4.17.3",
    "mongoose": "^6.2.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/config": "^0.0.41",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.0",
    "@types/supertest": "^2.0.11",
    "babel-preset-node8": "^1.2.0",
    "chai": "^4.3.6",
    "config": "^3.3.7",
    "debug": "^4.3.3",
    "eslint": "^8.9.0",
    "mocha": "^9.2.1",
    "nodemon": "^2.0.15",
    "supertest": "^6.2.2",
    "ts-node": "^10.5.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  }
}
